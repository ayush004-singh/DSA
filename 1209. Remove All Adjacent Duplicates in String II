class Solution {
    public String removeDuplicates(String s, int k) {
        Stack<int[]> st = new Stack<>();

        for(char c : s.toCharArray()){
            if(!st.isEmpty()&&st.peek()[0]==c){
                st.peek()[1]++;
                
                if(st.peek()[1]>=k){
                    st.pop();
                }
            }

            else{
                st.push(new int[]{c,1});
            }
        }


    StringBuilder sb = new StringBuilder();

    while(!st.isEmpty()){
        int t[] = st.pop();
        char ch = (char) t[0];
        int count = t[1];
        for(int i=0;i<count;i++){
            sb.append(ch);
        }
    }

    return sb.reverse().toString();
    }
}

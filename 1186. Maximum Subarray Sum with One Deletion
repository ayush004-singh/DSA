class Solution {
    public int maximumSum(int[] arr) {
        int nod = arr[0];
        int oned=0;
        int ans=arr[0];

        for(int i=1;i<arr.length;i++){
            oned=Math.max(nod,oned+arr[i]);
            nod=Math.max(nod+arr[i],arr[i]);
            ans=Math.max(ans,Math.max(oned,nod));
        }
        return ans;
    }
}

class Solution {
    private static void rev(int n[],int s,int e){
        while(s<e){
            int temp=n[e];
            n[e]=n[s];
            n[s]=temp;
            s++;
            e--;
        }
    }
    public int[] sortedSquares(int[] nums) {
        int neg[]=new int[nums.length];
        int pos[]=new int[nums.length];
        int n=0;
        int p=0;
        for(int num:nums){
            if(num<0){
                neg[n]=num;
                n++;
            }
            else if(num>=0){
                pos[p]=num;
                p++;
            }
        }

         for(int i=0;i<n;i++){
            neg[i]=neg[i]*neg[i];
        }
        for(int i=0;i<p;i++){
            pos[i]=pos[i]*pos[i];
        }
        rev(neg,0,n-1);
        int a=0;
        int b=0;
        int j=0;
        while(a<n&&b<p){
            if(neg[a]<pos[b]){
                nums[j]=neg[a];
                a++;
                j++;
            }
            else{
                nums[j]=pos[b];
                j++;
                b++;
            }
        }

        while(a<n) nums[j++]=neg[a++];
        while(b<p) nums[j++]=pos[b++];

        return nums;
    }
}

class Solution {
    public int subarraySum(int[] nums, int k) {
        int n = nums.length;
        int[] prefix = new int[n+1];
        
        // Build prefix sum array
        for(int i = 0; i < n; i++){
            prefix[i+1] = prefix[i] + nums[i];
        }

        int count = 0;

        // Check all subarrays using prefix differences
        for(int i = 0; i < n; i++){
            for(int j = i; j < n; j++){
                int sum = prefix[j+1] - prefix[i];
                if(sum == k){
                    count++;
                }
            }
        }

        return count;
    }
}
